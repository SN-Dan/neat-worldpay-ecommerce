<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">NEATWorldPay Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'neatworldpay')]}">
                    <script type="text/javascript" src="/payment_neatworldpay/static/src/js/neatworldpay.js"/>
                    <link rel="stylesheet" href="/payment_neatworldpay/static/src/css/neatworldpay.css"/>
                    <div class="alert alert-success" role="alert" colspan="2">
                        Don't have an Activation Code yet?<br />
                          
                        <a href="#" name="activation-code-button" onclick="showActivationForm(event)">
                        Get a free activation code
                        </a>
                        <!-- Hidden Form -->
                        <div id="neatworldpay_form" class="neatworldpay-popup">
                            <h3>Request an Activation Code</h3>
                            <div id="neatworldpay_request_form">

                            </div>
                            <a href="#" class="neatworldpay_submit" name="neatworldpay_submit">Submit</a>
                            <a href="#" class="neatworldpay_close_form" name="neatworldpay_close_form">Cancel</a>
                        </div>
                    </div>
                    <field
                        name="neatworldpay_reset_code"
                        string="Update Module Cache"
                        attrs="{'required': [('code', '=', 'neatworldpay'), ('state', '!=', 'disabled')]}"
                    />
                    <field
                        name="neatworldpay_activation_code"
                        string="Activation Code"
                        password="True"
                        attrs="{'required': [('code', '=', 'neatworldpay'), ('state', '!=', 'disabled')]}"
                    />
                    <field
                        name="neatworldpay_entity"
                        string="Entity"
                        attrs="{'required': [('code', '=', 'neatworldpay'), ('state', '!=', 'disabled')]}"
                    />
                    <field
                        name="neatworldpay_username"
                        string="Username"
                        attrs="{'required': [('code', '=', 'neatworldpay'), ('state', '!=', 'disabled')]}"
                    />
                    <field
                        name="neatworldpay_password"
                        string="Password"
                        password="True"
                        attrs="{'required': [('code', '=', 'neatworldpay'), ('state', '!=', 'disabled')]}"
                    />
                    <field
                        name="neatworldpay_use_iframe"
                        string="Use iFrame"
                    />
                    <field
                        name="neatworldpay_connection_url"
                        string="Odoo Server URL"
                        attrs="{'required': [('code', '=', 'neatworldpay'), ('state', '!=', 'disabled')]}"
                    />
                    <field
                        name="neatworldpay_fallback_user_id"
                        string="Fallback Failure User"
                        attrs="{'required': [('code', '=', 'neatworldpay'), ('state', '!=', 'disabled')]}"
                    />
                    <div class="alert alert-success" role="alert" colspan="2">
                        <b>By using this module you agree to our </b>
                        <a
                            href="https://www.sns-software.com/privacy"
                            target="_blank">
                        terms and conditions
                        </a>
                    </div>
                   <div class="oe_structure" colspan="2">
                        <p>
                            Please make sure to set the following webhook in the Worldpay Dashboard:
                        </p>
                        <p><strong>{Odoo Server URL}/neatworldpay/wh</strong></p>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
