<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">NEATWorldPay Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible="code != 'neatworldpay'">
                    <field
                        name="neatworldpay_entity"
                        string="Entity"
                        required="code == 'neatworldpay' and state != 'disabled'"
                    />
                    <field
                        name="neatworldpay_username"
                        string="Username"
                        required="code == 'neatworldpay' and state != 'disabled'"
                    />
                    <field
                        name="neatworldpay_password"
                        string="Password"
                        password="True"
                        required="code == 'neatworldpay' and state != 'disabled'"
                    />
                    <field
                        name="neatworldpay_use_iframe"
                        string="Use iFrame"
                    />
                    <field
                        name="neatworldpay_connection_url"
                        string="Odoo Server URL"
                        required="code == 'neatworldpay' and state != 'disabled'"
                    />
                    <field
                        name="neatworldpay_fallback_user_id"
                        string="Fallback Failure User"
                        required="code == 'neatworldpay' and state != 'disabled'"
                    />
                   <div class="oe_structure" colspan="2">
                        <p>
                            Please make sure to set the following webhook in the Worldpay Dashboard:
                        </p>
                        <p><strong>{Odoo Server URL}/neatworldpay/wh</strong></p>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
